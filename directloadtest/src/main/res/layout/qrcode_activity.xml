<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  
    <Button
        android:id="@+id/qrcode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="生成二维码" />
     <EditText
        android:id="@+id/qrcode_editText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入点什么..."
        android:ems="10"
         android:layout_above="@id/qrcode_button"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true">

        <requestFocus />
    </EditText>
    <TextView
        android:id="@+id/qrcode_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/qrcode_editText"
        android:layout_alignParentLeft="true"
        android:text="大小:"/>
     <SeekBar
         android:id="@+id/qrcode_seekBar1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@id/qrcode_editText"
         android:layout_toRightOf="@id/qrcode_textView1"

         />



     

     <ImageView
         android:layout_width="wrap_content"
         android:id="@+id/qrcode_imageView"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true" />
   
</RelativeLayout>
